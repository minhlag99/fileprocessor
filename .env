# Go File Processor Environment Configuration
# Created: May 7, 2025

# Application settings
APP_NAME=go-fileprocessor
PORT=9000
ALTERNATE_PORT=9001
ENABLE_MEDIA_PREVIEW=true

# Go settings
LATEST_GO_VERSION=1.24.2

# Deployment settings
ENVIRONMENT=development # development, staging, production

# Windows specific settings
WIN_APP_DIR=${USERPROFILE}/go-fileprocessor

# Linux specific settings
LINUX_APP_DIR=/opt/go-fileprocessor
SERVICE_NAME=go-fileprocessor.service

# Storage settings
DEFAULT_STORAGE=local # local, s3, google

# Worker settings
WORKER_COUNT=4
QUEUE_SIZE=100
MAX_ATTEMPTS=3

# Feature flags
ENABLE_LAN=true
ENABLE_PROCESSING=true
ENABLE_CLOUD_STORAGE=false
ENABLE_PROGRESS_UPDATES=true